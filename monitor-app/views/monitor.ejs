<!DOCTYPE html>
<html lang="de">

<head>
    <title>Parkerlaubnisse</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- <link rel="stylesheet" href="monitor.css"> -->

    <!-- JS -->
    <!-- <script type="text/javascript" src="./monitor.js"></script> -->
    <style>
        * {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 22px;
            padding: 16px;
        }

        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
    <script>
        setTimeout(function () {
            window.location.reload(1);
        }, 5000);
    </script>

</head>

<body style="background-color: darkgray;">
    <h2 id="datetime">Aktuelle Parkprobleme am </h2>
    <script>
        var dt = new Date();
        document.getElementById("datetime").textContent += dt.toLocaleString() + " Uhr (alle 5 Sekunden aktualisiert)";
    </script>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Zeitpunkt</th>
                <th>Meldung vom Parkplatz</th>
                <th>Meldung vom Kennzeichen</th>
                <th style="background-color: lightgrey;">Aktuelle Parkerlaubnisse</th>
            </tr>
        </thead>
        <tbody>
            <% var i=1; %>
                <% getWaitingCars().forEach(function(car) { %>
                    <tr>
                        <td>
                            <%= i++ %>
                        </td>
                        <td>
                            <%= car.zeitpunkt %> Uhr
                        </td>
                        <td>
                            <%= car.parkplatz %>
                        </td>
                        <td>
                            <%= car.kennzeichen %>
                        </td>
                        <td style="background-color: lightgrey;">
                            <%= car.parkerlaubnisse %>
                        </td>
                    </tr>
                    <% }); %>
        </tbody>
    </table>

</body>

</html>