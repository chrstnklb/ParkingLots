{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cypress ui + app server",
            "dependsOn": [
                "app server",
                "cypress ui"
            ]
        },
        {
            "label": "all tests",
            "dependsOn": [
                "app server",
                "cypress headless",
                "jest with coverage"
            ]
        },
        {
            "label": "cypress ui",
            "type": "shell",
            "command": "npm run cypress:open",
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
        },
        {
            "label": "all servers",
            "dependsOn": [
                "app server",
                "ftp server",
                "cron job"
            ]
        },
        {
            "label": "app server",
            "type": "shell",
            "command": "npm run start-application",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "group": "All servers"
            }
        },
        {
            "label": "ftp server",
            "type": "shell",
            "command": "npm run start-ftp-server",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "group": "All servers"
            }
        },
        {
            "label": "cron job",
            "type": "shell",
            "command": "npm run start-cron-job",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "group": "All servers"
            }
        },
        {
            "type": "shell",
            "label": "create folder",
            "command": "npm run start-create-ressources-folder",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
        },
        {
            "type": "shell",
            "label": "cypress headless",
            "command": "npm run cypress:headless",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "group": "All Tests"
            }
        },
        {
            "type": "shell",
            "label": "jest with coverage",
            "command": "npm run jest-with-coverage",
            "options": {
                "statusbar": {
                    "hide": false
                },
            },
            "presentation": {
                "group": "All Tests"
            }
        },
    ]
}