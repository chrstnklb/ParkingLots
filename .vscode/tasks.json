{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "▶️ cypress",
            "dependsOn": [
                "app server",
                "cypress tests"
            ]
        },
        {
            "label": "cypress tests",
            "type": "shell",
            "command": "npm run cypress:open",
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
        },
        {
            "label": "▶️ all servers",
            "dependsOn": [
                "app server",
                "ftp server",
                "cron job"
            ]
        },
        {
            "label": "▶️ app server",
            "type": "shell",
            "command": "npm run start-application",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "group": "All servers"
            }
        },
        {
            "label": "▶️ ftp server",
            "type": "shell",
            "command": "npm run start-ftp-server",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "group": "All servers"
            }
        },
        {
            "label": "▶️ cron job",
            "type": "shell",
            "command": "npm run start-cron-job",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "group": "All servers"
            }
        },
        {
            "type": "shell",
            "label": "▶️ create folder",
            "command": "npm run start-create-ressources-folder",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
        },
    ]
}