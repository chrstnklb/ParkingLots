{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run all servers",
            "dependsOn": [
                "Run application server",
                "Run ftp server",
                "Run exports cron"
            ]
        },
        {
            "label": "Run application server",
            "type": "shell",
            "command": "http-server -p 8081",
            "options": {
                "statusbar": {
                    "hide": true
                }
            },
            "presentation": {
                "group": "All servers"
            }
        },
        {
            "label": "Run ftp server",
            "type": "shell",
            "command": "npx ts-node components/ftp-server/ftp-server.ts",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "group": "All servers"
            }
        },
        {
            "type": "shell",
            "label": "Run exports cron",
            "command": "node components/ftp-server/cron.js",
            "options": {
                "statusbar": {
                    "hide": false
                }
            },
            "presentation": {
                "group": "All servers"
            }
        },
    ]
}